@model GreenSpace.Models.Order

@{
    ViewData["Title"] = "Thanh toán đơn hàng";
    var cartItems = ViewBag.CartItems as List<GreenSpace.Models.CartItem>;
    double totalAmount = ViewBag.TotalAmount;
    double shippingFee = ViewBag.ShippingFee;
    double grandTotal = ViewBag.GrandTotal;
}

<div class="container">
    <div class="shipping-info">
        <h2>Địa chỉ giao hàng</h2>

        <form asp-controller="Orders" asp-action="Create" method="post">
            <div class="form-group">
                <label for="Email">Email</label>
                <input asp-for="Email" class="form-control" placeholder="Nhập email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="FullName">Tên người nhận</label>
                <input asp-for="FullName" class="form-control" placeholder="Tên người nhận" required />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="Phone">Số điện thoại</label>
                <input asp-for="Phone" class="form-control" placeholder="Nhập số điện thoại" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="Address">Địa chỉ nhận hàng</label>
                <textarea asp-for="Address" class="form-control" rows="3" placeholder="Số nhà, đường, quận/huyện, tỉnh/thành"></textarea>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <p class="shipping-fee">Phí giao hàng: <strong>30,000 VNĐ</strong></p>

            <h3>Phương thức thanh toán</h3>
            <select class="form-control">
                <option selected>Thanh toán khi nhận hàng (COD)</option>
                <option>Chuyển khoản ngân hàng</option>
            </select>

            <div class="checkout-buttons">
                <a asp-controller="CartItems" asp-action="Index" class="btn btn-secondary">TRANG TRƯỚC</a>
                <button type="submit" class="btn btn-success">ĐẶT HÀNG</button>
            </div>
        </form>
    </div>

    <div class="cart-summary">
        <h2>Chi tiết đơn hàng</h2>
        <table class="cart-table">
            <thead>
                <tr>
                    <th>Sản phẩm</th>
                    <th>Giá</th>
                    <th>Số lượng</th>
                    <th>Tổng</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in cartItems)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@(item.Price?.ToString("N0") ?? "0") VNĐ</td>
                        <td>@item.Quantity</td>
                        <td>@String.Format("{0:N0} VNĐ", (item.Price ?? 0) * item.Quantity)</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="order-totals">
            <p>Tạm tính: @totalAmount.ToString("N0") VNĐ</p>
            <p>Phí giao hàng: @shippingFee.ToString("N0") VNĐ</p>
            <h3>Tổng cộng: @grandTotal.ToString("N0") VNĐ</h3>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

