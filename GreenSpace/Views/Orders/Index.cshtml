@model IEnumerable<GreenSpace.Models.Order>

@{
    ViewData["Title"] = "Index";
}

<h2>Lịch sử mua hàng</h2>

@if (Model != null && Model.Any())
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Mã đơn</th>
                <th>Ngày tạo</th>
                <th>Tên người nhận</th>
                <th>Email</th>
                <th>Điện thoại</th>
                <th>Địa chỉ</th>
                <th>Phí ship</th>
                <th>Tổng tiền</th>
                <th>Trạng thái</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderCode</td>
                    <td>@order.CreatedAt.ToString("dd/MM/yyyy HH:mm:ss")</td>
                    <td>@order.FullName</td>
                    <td>@order.Email</td>
                    <td>@order.Phone</td>
                    <td>@order.Address</td>
                    <td>@(order.ShippingFee?.ToString("N0")) VNĐ</td>
                    <td>@(order.TotalAmount?.ToString("N0")) VNĐ</td>
                    <td>@order.Status.ToString()</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="no-history-message">
        <p>Chưa có lịch sử mua hàng.</p>
    </div>
}

<style>
    h2 {
        font-size: 28px;
        font-weight: bold;
        color: #1b5e20;
        margin-bottom: 25px;
        text-align: center;
    }

    .table {
        width: 100%;
        margin-bottom: 1rem;
        color: #212529;
        background-color: #fff;
        border-collapse: collapse;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .table-bordered {
        border: 1px solid #dee2e6;
    }

        .table-bordered th,
        .table-bordered td {
            border: 1px solid #dee2e6;
        }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: rgba(0, 0, 0, 0.05);
    }

    .table thead th {
        vertical-align: bottom;
        border-bottom: 2px solid #dee2e6;
        background-color: #f8f9fa;
        color: #495057;
        text-transform: uppercase;
        font-size: 14px;
        font-weight: 600;
        padding: 12px 15px;
        text-align: left;
    }

    .table tbody td {
        padding: 12px 15px;
        vertical-align: middle;
        font-size: 15px;
    }

    .table .text-center {
        text-align: center;
        font-style: italic;
        color: #888;
        padding: 20px;
    }

    .table tbody td:first-child {
        font-weight: bold;
        color: #343a40;
    }

    .table tbody td:last-child {
        font-weight: 600;
        color: #28a745;
    }

    @@media (max-width: 768px) {
        .table-responsive

    {
        display: block;
        width: 100%;
        overflow-x: auto;
        -webkit-overflow-scrolling: touch;
    }

    .table-responsive > .table {
        margin-bottom: 0;
    }

    }
</style>
