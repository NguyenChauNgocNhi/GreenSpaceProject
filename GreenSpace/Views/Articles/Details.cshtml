@model GreenSpace.Models.Article

@{
    ViewData["Title"] = "Xem chi tiết";
}

<head>
    <style>
        .container {
            background-color: #f0f2f5;
            font-family: Arial, sans-serif;
            line-height: 1.6;
            color: #333;
            padding-bottom: 50px;
        }

        .article-container {
            max-width: 800px;
            margin: 40px auto;
            padding: 30px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .article-title {
            font-size: 2.5em;
            color: #1b5e20;
            margin-bottom: 10px;
        }

        .article-date {
            font-size: 0.9em;
            color: #777;
            border-bottom: 1px solid #eee;
            padding-bottom: 15px;
            margin-bottom: 20px;
        }

        .article-image {
            width: 100%;
            height: auto;
            max-height: 400px;
            object-fit: cover;
            border-radius: 8px;
            margin-bottom: 20px;
        }

        .article-body {
            font-size: 1.1em;
            text-align: justify;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="article-container">
            <h1 class="article-title">@Model.Title</h1>
            <p class="article-date">Đăng ngày: @Model.CreatedAt?.ToString("dd/MM/yyyy HH:mm:ss")</p>
            <hr />

            <div class="article-content">
                @if (!string.IsNullOrEmpty(Model.ThumbnailUrl))
                {
                    <img src="@Model.ThumbnailUrl" alt="@Model.Title" class="article-image" />
                }
                <div class="article-body">
                    @Html.Raw(Model.Content.Replace("\n", "<br/>"))
                </div>
            </div>
        </div>
    </div>
</body>

