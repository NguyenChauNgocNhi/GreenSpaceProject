@model List<GreenSpace.Models.Product>

@{
    ViewData["Title"] = "Kết quả tìm kiếm";
}

<head>
    <style>
        .product-page {
            padding: 20px;
            background-color: #f7f7f7;
        }

        .product-list-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            .product-list-container h2 {
                text-align: center;
                color: #333;
                font-size: 2em;
                margin-bottom: 20px;
                border-bottom: 2px solid #ddd;
                padding-bottom: 15px;
            }

        .product-grid {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: flex-start;
        }

        .product-card {
            flex: 0 0 auto;
            width: 220px;
            border: 1px solid #ddd;
            border-radius: 8px;
            text-align: center;
            background: #fff;
            padding: 10px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.1);
            transition: transform 0.2s;
            width: 220px;
            overflow: hidden;
            position: relative;
            padding-bottom: 15px;
        }

            .product-card:hover {
                transform: scale(1.05);
                background-color: #90ee90;
            }

            .product-card img {
                width: 100%;
                height: 160px;
                object-fit: cover;
                border-radius: 6px;
            }

            .product-card h3 {
                font-size: 16px;
                margin: 10px 0;
                color: #333;
            }

        .price {
            font-size: 15px;
            color: #2e7d32;
            font-weight: bold;
        }

        .old-price {
            font-size: 14px;
            text-decoration: line-through;
            color: #888;
        }

        .discount {
            display: inline-block;
            margin: 5px 0;
            background: #fdd835;
            padding: 4px 10px;
            border-radius: 6px;
            font-size: 13px;
            font-weight: bold;
            color: #000;
        }

        .product-actions {
            margin-top: 10px;
            display: flex;
            justify-content: center;
            gap: 8px;
        }

        .view-btn {
            color: black;
            text-decoration: none;
            background: #ccc;
            border: none;
            padding: 8px 16px;
            border-radius: 6px;
            cursor: pointer;
            font-weight: bold;
        }

            .view-btn:hover {
                background: #28c160;
                color: white;
            }

        .add-to-cart-btn {
            background: #ccc;
            color: white;
            border: none;
            padding: 8px 12px;
            border-radius: 6px;
            cursor: pointer;
            transition: 0.3s;
        }

            .add-to-cart-btn:hover {
                background: #28c160;
            }

        .no-products {
            text-align: center;
            font-size: 1.2em;
            color: #777;
            margin-top: 50px;
        }
    </style>
</head>

<body>
    <div class="product-page">
        <section class="product-list-container">
            <h2>Kết quả tìm kiếm cho: @ViewData["SearchQuery"]</h2>

            @if (Model != null && Model.Any())
            {
                <div class="product-grid">
                    @foreach (var product in Model)
                    {
                        <div class="product-card">
                            <img src="~/@(product.Images.FirstOrDefault()?.ImageUrl ?? "images/no-image.jpg")" alt="@product.Name" />
                            <h3>@product.Name</h3>
                            <p class="price">@string.Format("{0:N0} VNĐ", @product.Price)</p>
                            @if (product.OriginalPrice.HasValue)
                            {
                                <p class="old-price">@string.Format("{0:N0} VNĐ", @product.OriginalPrice)</p>
                            }
                            @if (product.OriginalPrice.HasValue && product.Price < product.OriginalPrice.Value)
                            {
                                double discount = (1 - (product.Price / product.OriginalPrice.Value)) * 100;
                                <span class="discount">Giảm - @Math.Round(discount) %</span>
                            }
                            <div class="product-actions">
                                <a href="/Products/Details/@product.ProductId" class="view-btn">Xem</a>
                                <button class="add-to-cart-btn">
                                    <i class="fa fa-shopping-cart"></i>
                                </button>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="no-products">Không tìm thấy sản phẩm nào.</div>
            }
        </section>
    </div>
</body>
