@model GreenSpace.Models.Feedback

@{
    ViewData["Title"] = "Hỗ trợ";
}

<head>
    <link rel="stylesheet" href="~/css/hoTro.css">
</head>

<body>
    <div class="contact-container">
        <div class="contact-header">
            <h1>LIÊN HỆ</h1>
            <p>Nếu bạn có bất kỳ câu hỏi hoặc phản hồi, vui lòng liên hệ với chúng tôi. Chúng tôi luôn sẵn lòng hỗ trợ bạn!</p>
        </div>

        <div class="contact-content">
            <div class="contact-info">
                <div class="info-box">
                    <div class="box-icon"></div>
                    <h3>Địa chỉ</h3>
                    <p>Kim Long, Huế</p>
                </div>
                <div class="info-box">
                    <div class="box-icon"></div>
                    <h3>Liên hệ</h3>
                    <p>Số điện thoại: 0123.456.789</p>
                    <p>Email: greenspace552@gmail.com</p>
                </div>
                <div class="info-box">
                    <div class="box-icon"></div>
                    <h3>Thời gian làm việc</h3>
                    <p>Thứ 2 - Thứ 7: 08:00 - 20:00</p>
                </div>
            </div>

            <div class="contact-form">
                <h2>Gửi phản hồi</h2>
                <form asp-controller="Feedbacks" asp-action="Create" method="post">
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label asp-for="Name">Tên của bạn</label>
                        <input asp-for="Name" class="form-control" placeholder="Tên của bạn" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email">Địa chỉ Email của bạn</label>
                        <input asp-for="Email" class="form-control" placeholder="Địa chỉ Email của bạn" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Message">Lời phản hồi hoặc góp ý...</label>
                        <textarea asp-for="Message" class="form-control" rows="5" placeholder="Lời phản hồi hoặc góp ý..."></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn-submit">Gửi phản hồi</button>
                </form>
            </div>
        </div>
    </div> 

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success mt-3">
            @TempData["SuccessMessage"]
        </div>
    }
</body>