@model IEnumerable<GreenSpace.Models.User>

@{
    ViewData["Title"] = "Quản lý người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    
}

<head>
    <link rel="stylesheet" href="~/css/admin.css" />
</head>

<body>
    <div class="main-container">
        <div class="main-header">
            <h1>Quản Lý Người Dùng</h1>
            <a asp-area="Admin" asp-controller="Users" asp-action="Create" class="add-button">
                <i class="material-icons">add</i>
            </a>
        </div>

        <div class="content-table">
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>USERNAME</th>
                        <th>DISPLAY NAME</th>
                        <th>EMAIL</th>
                        <th>VAI TRÒ</th>
                        <th>HÀNH ĐỘNG</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        int index = 1;
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Username</td>
                                <td>@item.DisplayName</td>
                                <td>@item.Email</td>
                                <td>@item.Role</td>
                                <td class="action-buttons">
                                    <a asp-area="Admin" asp-controller="Users" asp-action="Edit" asp-route-id="@item.Id" class="edit-btn">
                                        <i class="material-icons">edit</i>
                                    </a>
                                    <form asp-area="Admin" asp-controller="Users" asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;">
                                        <button type="submit" class="delete-btn" onclick="return confirm('Bạn có chắc chắn muốn xóa?')">
                                            <i class="material-icons">delete</i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                            index++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="no-data">Không có dữ liệu người dùng.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>

        


