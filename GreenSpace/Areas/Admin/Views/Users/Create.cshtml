@model GreenSpace.Models.User

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="modal-content">
    <h2>Thêm người dùng</h2>
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Username" class="control-label">Tên tài khoản (username)</label>
            <input asp-for="Username" class="form-control" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DisplayName" class="control-label">Tên hiển thị (display name)</label>
            <input asp-for="DisplayName" class="form-control">
            <span asp-validation-for="DisplayName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email" class="control-label">Email</label>
            <input asp-for="Email" class="form-control">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Phone" class="control-label">Số điện thoại</label>
            <input asp-for="Phone" class="form-control">
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Address" class="control-label">Địa chỉ</label>
            <input asp-for="Address" class="form-control">
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Dob" class="control-label">Ngày sinh</label>
            <input asp-for="Dob" class="form-control" type="date">
            <span asp-validation-for="Dob" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Role" class="control-label">Vai trò</label>
            <select asp-for="Role" class="form-control" asp-items="@(new SelectList(new[] { "Khách hàng", "Nhân viên", "Admin" }))">
                <option value="">-- Chọn vai trò --</option>
            </select>
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>

        <label asp-for="Password" class="control-label">Mật khẩu</label>
        <input asp-for="Password" class="form-control">
        <span asp-validation-for="Password" class="text-danger"></span>
        
        <div class="form-actions">
            <a asp-action="Index" class="btn btn-cancel">Hủy</a>
            <button type="submit" class="btn btn-save">Lưu</button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@section Styles {
    <style>
        .modal-content {
            background-color: #2e3048;
            padding: 30px;
            border-radius: 8px;
            width: 600px;
            max-width: 90%;
            color: #fff;
            margin-left: 20px;
            margin-top: 20px;
        }

            .modal-content h2 {
                color: #fff;
                font-size: 24px;
                margin-bottom: 20px;
            }

        .form-group {
            margin-bottom: 20px;
        }

            .form-group label {
                display: block;
                margin-bottom: 5px;
                color: #d4d4d4;
            }

        input[type="text"],
        textarea {
            width: 100%;
            padding: 10px;
            border: 1px solid #555;
            background-color: #3f4159;
            color: #fff;
            border-radius: 4px;
            box-sizing: border-box;
            font-size: 14px;
        }

        .file-input {
            display: none;
        }

        .file-info {
            display: inline-block;
            padding: 8px 12px;
            background-color: #494c65;
            border: 1px solid #5a5d7c;
            border-radius: 4px;
            cursor: pointer;
        }

        .form-actions {
            text-align: right;
            margin-top: 30px;
        }

            .form-actions a {
                text-decoration: none;
            }

        .btn {
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-weight: bold;
            margin-left: 10px;
        }

        .btn-cancel {
            background-color: #555;
            color: #fff;
        }

        .btn-save {
            background-color: #007bff;
            color: #fff;
        }

        #modal-container.is-visible {
            display: flex;
        }
    </style>
}


