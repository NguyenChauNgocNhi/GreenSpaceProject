@model IEnumerable<GreenSpace.Models.Article>

@{
    ViewData["Title"] = "Quản lý cẩm nang";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    
}

<head>
    <link rel="stylesheet" href="~/css/admin.css" />
</head>

<body>
    <div class="main-container">
        <div class="main-header">
            <h1>Quản Lý Cẩm Nang</h1>
            <a asp-area="Admin" asp-controller="Articles" asp-action="Create" class="add-button">
                <i class="material-icons">add</i>
            </a>
        </div>

        <div class="content-table">
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>TIÊU ĐỀ</th>
                        <th>THUMBNAIL</th>
                        <th>NỘI DUNG</th>
                        <th>NGÀY TẠO</th>
                        <th>HÀNH ĐỘNG</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Title</td>
                                <td>
                                    <img src="@item.ThumbnailUrl" alt="Thumbnail" style="width:80px; height:60px; object-fit:cover;" />
                                </td>
                                <td style="max-width:250px; white-space:nowrap; overflow:hidden; text-overflow:ellipsis;">
                                    @item.Content
                                </td>
                                <td>@item.CreatedAt?.ToString("dd/MM/yyyy HH:mm:ss")</td>
                                <td class="action-buttons">
                                    <a asp-area="Admin" asp-controller="Articles" asp-action="Edit" asp-route-id="@item.Id" class="edit-btn">
                                        <i class="material-icons">edit</i>
                                    </a>
                                    <form asp-area="Admin" asp-controller="Articles" asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;">
                                        <button type="submit" class="delete-btn" onclick="return confirm('Bạn có chắc chắn muốn xóa?')">
                                            <i class="material-icons">delete</i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="no-data">Không có dữ liệu bài viết.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>

        


