@model GreenSpace.Models.Product

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="modal-content">
    <h2>Thêm sản phẩm</h2>
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="ProductId" class="control-label">ID</label>
            <input asp-for="ProductId" class="form-control" />
            <span asp-validation-for="ProductId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Name" class="control-label">Tên sản phẩm</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Price" class="control-label">Giá bán</label>
            <input asp-for="Price" class="form-control" type="number" step="0.01">
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="OriginalPrice" class="control-label">Giá gốc</label>
            <input asp-for="OriginalPrice" class="form-control" type="number" step="0.01">
            <span asp-validation-for="OriginalPrice" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="control-label">Mô tả</label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Category" class="control-label">Loại sản phẩm</label>
            <input asp-for="Category" class="form-control">
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="StockQuantity" class="control-label">Số lượng</label>
            <input asp-for="StockQuantity" class="form-control" type="number">
            <span asp-validation-for="StockQuantity" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Slug" class="control-label">Slug</label>
            <input asp-for="Slug" class="form-control" />
            <span asp-validation-for="Slug" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Tags (ngăn cách bằng dấu ,)</label>
            <input name="tags" class="form-control" placeholder="Ví dụ: cây cảnh, nội thất" />
        </div>

        <div class="form-group">
            <label class="control-label">Hình ảnh sản phẩm</label>
            <input type="file" name="ImageFile" class="form-control" />
            <input type="hidden" asp-for="FirstImageUrl" />
            <span asp-validation-for="FirstImageUrl" class="text-danger"></span>
        </div>

        <div class="form-actions">
            <a asp-action="Index" class="btn btn-cancel">Hủy</a>
            <button type="submit" class="btn btn-save">Lưu</button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@section Styles {
    <style>
        .modal-content {
            background-color: #2e3048;
            padding: 30px;
            border-radius: 8px;
            width: 600px;
            max-width: 90%;
            color: #fff;
            margin-left: 20px;
            margin-top: 20px;
        }

            .modal-content h2 {
                color: #fff;
                font-size: 24px;
                margin-bottom: 20px;
            }

        .form-group {
            margin-bottom: 20px;
        }

            .form-group label {
                display: block;
                margin-bottom: 5px;
                color: #d4d4d4;
            }

        input[type="text"],
        textarea {
            width: 100%;
            padding: 10px;
            border: 1px solid #555;
            background-color: #3f4159;
            color: #fff;
            border-radius: 4px;
            box-sizing: border-box;
            font-size: 14px;
        }

        .file-input {
            display: none;
        }

        .file-info {
            display: inline-block;
            padding: 8px 12px;
            background-color: #494c65;
            border: 1px solid #5a5d7c;
            border-radius: 4px;
            cursor: pointer;
        }

        .form-actions {
            text-align: right;
            margin-top: 30px;
        }

            .form-actions a {
                text-decoration: none;
            }

        .btn {
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-weight: bold;
            margin-left: 10px;
        }

        .btn-cancel {
            background-color: #555;
            color: #fff;
        }

        .btn-save {
            background-color: #007bff;
            color: #fff;
        }

        #modal-container.is-visible {
            display: flex;
        }
    </style>
}


